<web-app xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>Archetype Created Web Application</display-name>
  <servlet>  
	    <servlet-name>spring</servlet-name>  
	    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>  
	    <load-on-startup>1</load-on-startup>  
	</servlet>  
	<servlet-mapping>  
	    <servlet-name>spring</servlet-name>  
	    <url-pattern>/</url-pattern>  
	</servlet-mapping>
	
	<servlet>
        <servlet-name>ClienteServlet</servlet-name>
        <servlet-class>br.com.leadersofts.spring.servlet.ClienteServlet</servlet-class>
    </servlet>
		
	<servlet>
        <servlet-name>ClienteBean</servlet-name>
        <servlet-class> br.com.leadersofts.spring.model </servlet-class>
    </servlet>
	
	
	<servlet>
        <servlet-name>cadCliente</servlet-name>
        <jsp-file>/cadastro/cadCliente.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>editCliente</servlet-name>
        <jsp-file>/edicao/editCliente.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>visualizaCliente</servlet-name>
        <jsp-file>/listagem/visualizaCliente.jsp</jsp-file>
    </servlet>
	
	
	
	 

	<welcome-file-list>
	        <welcome-file>index.jsp</welcome-file>
	</welcome-file-list> 
 
</web-app>